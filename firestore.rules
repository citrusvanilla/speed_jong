rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Test collection - allow anyone (for testing)
    match /test/{document} {
      allow read, write: if true;
    }
    
    // Tournament data
    match /tournaments/{tournamentId} {
      // Anyone can read tournament info
      allow read: if true;
      // Only allow writes from localhost during setup
      // TODO: Add proper admin authentication
      allow write: if true;
      
      // Players subcollection
      match /players/{playerId} {
        allow read: if true;
        // Allow writes for now (admin only in production)
        allow write: if true;
      }
      
      // Tables subcollection
      match /tables/{tableId} {
        allow read: if true;
        // Allow writes for now (admin only in production)
        allow write: if true;
      }
      
      // Rounds subcollection (for future scoring)
      match /rounds/{roundId} {
        allow read: if true;
        allow write: if true;
      }
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

